{
  "name": "@celestio/astro-selfie",
  "version": "1.2.0",
  "description": "Astro integration to generate page screenshots to show as Open Graph images",
  "license": "ISC",
  "author": {
    "name": "Yann V.",
    "email": "yann@celest.io",
    "url": "https://github.com/celest-io"
  },
  "homepage": "https://github.com/celest-io/astro-selfie#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/celest-io/astro-selfie.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare": "rm -rf dist && tsc",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "fix": "pnpm lint && pnpm format",
    "format": "biome format --write .",
    "lint": "biome check --write ."
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "astro-integration",
    "astro"
  ],
  "dependencies": {
    "@playwright/browser-chromium": "^1.54.2",
    "astro-integration-kit": "^0.18.0",
    "get-port": "^7.1.0",
    "micro": "^10.0.1",
    "playwright": "^1.54.2",
    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/serve-handler": "^6.1.4",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "astro": "^5.7.0"
  }
}
