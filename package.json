    "serve-handler": "^6.1.6"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/serve-handler": "^6.1.4",
    "astro": "^5.12.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "xo": "^1.2.1"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "rules": {
